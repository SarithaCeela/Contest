//Arithmetics
import java.io.*; // for handling input/output

import java.util.*; // contains Collections framework

class Main {

    public static void main (String[] args) {

        // Your code here

        Scanner sc=new Scanner(System.in);

        int n=sc.nextInt();

        int m=sc.nextInt();

        int p=n-m;

        int q=n+m;

        int x=-1;

        for(int i=p;i<q;i++){

            if(m-i<=i-n){

                x=i;

                break;

            }

           

        }

        System.out.print(x);

    }

}
